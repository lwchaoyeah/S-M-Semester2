<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:gravity="center"
        android:text="Friend Matching"
        android:textColor="@color/colorPureWhite"
        android:background="@color/colorButtonPressed"
        android:textSize="16dp"/>


    <TextView
        android:id="@+id/tv_single_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPureWhite"
        android:includeFontPadding="false"
        android:paddingBottom="@dimen/common_margin_15"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:text="choose some attributes and input ,then submit"
        android:textColor="@color/colorContentMain"
        android:textSize="@dimen/common_text_size_13"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height_56"
        android:layout_marginTop="@dimen/common_margin_15"
        android:background="@color/colorPureWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_15"
            android:text="Matching Conditions"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/common_text_size_16"/>



    </LinearLayout>

    <!--no need for ScrollView-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_alignParentStart="true"
        android:background="@color/colorPureWhite"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/attr_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/common_margin_15"
                    android:text="age"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/common_text_size_16" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingStart="@dimen/common_margin_20">

                    <TextView
                        android:id="@+id/age_value"
                        android:layout_width="@dimen/picker_button_width"
                        android:layout_height="@dimen/picker_button_height"
                        android:background="@drawable/button_with_rightward_26"
                        android:gravity="center"
                        android:paddingStart="@dimen/common_margin_10"
                        android:paddingEnd="@dimen/common_margin_10"
                        android:text="eg: 20"
                        android:textColor="@color/colorContentSecondary"
                        android:textSize="@dimen/common_text_size_13" />

                </FrameLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/age_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:paddingStart="@dimen/common_margin_16"
                    android:paddingEnd="@dimen/common_margin_15" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/attr_gender_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/common_margin_15"
                    android:text="gender"
                    android:textColor="@color/colorTitle"
                    android:textSize="@dimen/common_text_size_16" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingStart="@dimen/common_margin_20">

                    <TextView
                        android:id="@+id/gender_value"
                        android:layout_width="@dimen/picker_button_width"
                        android:layout_height="@dimen/picker_button_height"
                        android:background="@drawable/button_with_rightward_26"
                        android:gravity="center"
                        android:paddingStart="@dimen/common_margin_10"
                        android:paddingEnd="@dimen/common_margin_10"
                        android:text="female/male"
                        android:textColor="@color/colorContentSecondary"
                        android:textSize="@dimen/common_text_size_13" />

                </FrameLayout>

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/gender_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="@dimen/common_margin_16"
                    android:paddingEnd="@dimen/common_margin_15" />

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/attr_nationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="nationality"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/common_text_size_16" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/common_margin_20">

                <TextView
                    android:id="@+id/nationality_value"
                    android:layout_width="@dimen/picker_button_width"
                    android:layout_height="@dimen/picker_button_height"
                    android:background="@drawable/button_with_rightward_26"
                    android:gravity="center"
                    android:paddingStart="@dimen/common_margin_10"
                    android:paddingEnd="@dimen/common_margin_10"
                    android:text="eg: China"
                    android:textColor="@color/colorContentSecondary"
                    android:textSize="@dimen/common_text_size_13" />

            </FrameLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/nationality_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingStart="@dimen/common_margin_16"
                android:paddingEnd="@dimen/common_margin_15" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/attr_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="unit"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/common_text_size_16" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/common_margin_20">

                <TextView
                    android:id="@+id/unit_value"
                    android:layout_width="@dimen/picker_button_width"
                    android:layout_height="@dimen/picker_button_height"
                    android:background="@drawable/button_with_rightward_26"
                    android:gravity="center"
                    android:paddingStart="@dimen/common_margin_10"
                    android:paddingEnd="@dimen/common_margin_10"
                    android:text="eg: MIT"
                    android:textColor="@color/colorContentSecondary"
                    android:textSize="@dimen/common_text_size_13" />

            </FrameLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/unit_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingStart="@dimen/common_margin_16"
                android:paddingEnd="@dimen/common_margin_15" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/attr_studymode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/common_margin_15"
                android:text="study mode"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/common_text_size_16" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="@dimen/common_margin_20">

                <TextView
                    android:id="@+id/studymode_value"
                    android:layout_width="@dimen/picker_button_width"
                    android:layout_height="@dimen/picker_button_height"
                    android:background="@drawable/button_with_rightward_26"
                    android:gravity="center"
                    android:paddingStart="@dimen/common_margin_10"
                    android:paddingEnd="@dimen/common_margin_10"
                    android:text="eg: part-time"
                    android:textColor="@color/colorContentSecondary"
                    android:textSize="@dimen/common_text_size_13" />

            </FrameLayout>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/studymode_switch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingStart="@dimen/common_margin_16"
                android:paddingEnd="@dimen/common_margin_15" />

        </RelativeLayout>

    </LinearLayout>
    </LinearLayout>



    <!--no need for fuzzy search-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_item_height_56"
        android:layout_marginTop="@dimen/common_margin_15"
        android:background="@color/colorPureWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_margin_15"
            android:text="Fuzzy Search"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/common_text_size_16"/>



    </LinearLayout>

    <EditText
        android:id="@+id/content"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:theme="@style/MyEditText"
        android:editable="false"
        android:maxLength="15"
        android:visibility="gone"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPureWhite">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/btn_start_condition_match"
                android:layout_width="@dimen/common_button_width"
                android:layout_height="@dimen/bottom_bar_height"
                android:layout_marginTop="@dimen/common_margin_30"
                android:background="@drawable/button_selector_with_corner_18"
                android:text="Start"
                android:textColor="@color/colorPureWhite"
                android:textSize="@dimen/common_text_size_16"/>

        </FrameLayout>

        <!--<TextView-->
        <!--android:id="@+id/tv_free_matching_times_warn"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="@dimen/common_margin_10"-->
        <!--android:includeFontPadding="false"-->
        <!--android:text="@string/love_unmatched_warn_point"-->
        <!--android:textColor="@color/colorContentSecondary"-->
        <!--android:textSize="@dimen/common_text_size_13"/>-->

    </RelativeLayout>

</LinearLayout>