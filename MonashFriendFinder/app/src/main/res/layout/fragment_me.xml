<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    android:focusable="true"
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:gravity="center"
            android:text="Me"
            android:textColor="@color/colorPureWhite"
            android:background="@color/colorButtonPressed"
            android:textSize="20dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorBackGround"/>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/register_fname"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/register_fname_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="FirstName"
                android:textColor="@color/colorName"
                android:textSize="16dp" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_fname_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/register_fname_height"
                android:layout_alignBottom="@+id/register_fname_height"
                android:layout_marginLeft="58dp"
                android:layout_toEndOf="@+id/register_fname_height"
                android:layout_toRightOf="@+id/register_fname_height"
                android:hint="Please enter you first name"
                android:text="Tom"
                android:background="@null"
                android:textColor="@color/colorName"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/rightward_32" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/register_sname"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/register_sname_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="FamName"
                android:textColor="@color/colorName"
                android:textSize="16dp" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_sname_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/register_sname_height"
                android:layout_alignBottom="@+id/register_sname_height"
                android:layout_marginLeft="58dp"
                android:layout_toEndOf="@+id/register_sname_height"
                android:layout_toRightOf="@+id/register_sname_height"
                android:hint="Please enter your family name"
                android:text="Cruise"
                android:background="@null"
                android:textColor="@color/colorName"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/rightward_32" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

        <RelativeLayout
            android:id="@+id/register_gender"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_gender_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Gender"
                android:textSize="16dp"
                android:textColor="@color/colorName" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_gender"
                android:orientation="horizontal"
                android:layout_marginLeft="150dp">

                <RadioButton
                    android:id="@+id/select_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="true"
                    android:text="male" />

                <RadioButton
                    android:id="@+id/select_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:checked="false"
                    android:text="female" />
            </RadioGroup>



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/rightward_32" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

        <RelativeLayout
            android:id="@+id/register_date"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:id="@+id/register_date_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Date of Birth"
                android:textSize="16dp"
                android:textColor="@color/colorName" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_date_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="1996/05/07"
                android:hint="1999/01/01"
                android:background="@null"
                android:textColor="@color/colorName"
                android:layout_alignBaseline="@+id/register_date_index"
                android:layout_alignBottom="@+id/register_date_index"
                android:layout_toRightOf="@+id/register_date_index"
                android:layout_toEndOf="@+id/register_date_index"
                android:layout_marginLeft="45dp"
                android:ems="10"
                android:inputType="none"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

        <RelativeLayout
            android:id="@+id/register_course"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/register_course_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Unit     "
                android:textSize="16dp"
                android:textColor="@color/colorName" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Spinner
                android:id="@+id/register_course_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="15dp"
                android:entries="@array/units"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/rightward_32" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

        <RelativeLayout
            android:id="@+id/register_nationaliyt"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/register_nationaliyt_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Nationality"
                android:textSize="16dp"
                android:textColor="@color/colorName"
                android:orientation="horizontal"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginLeft="130dp"
                android:background="#000000" />
            <Spinner
                android:id="@+id/sp_nationality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="15dp"
                android:entries="@array/sp_nationality">
            </Spinner>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />


        <RelativeLayout
            android:id="@+id/register_studymode"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/register_studymode_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Study mode"
                android:textSize="16dp"
                android:textColor="@color/colorName" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <Spinner
                android:id="@+id/register_studymode_enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="144dp"
                android:layout_marginTop="15dp"
                android:entries="@array/study_mode"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

        <RelativeLayout
            android:id="@+id/register_favorite_movie"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <TextView
                android:id="@+id/register_favorite_movie_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Favorite Movie"
                android:textSize="16dp"
                android:textColor="@color/colorName" />

            <View
                android:layout_marginLeft="130dp"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#000000" />

            <EditText
                android:id="@+id/register_favorite_movie_height_enter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:hint="Part-time or Full-time"
                android:text="The Avengers 4"
                android:background="@null"
                android:textColor="@color/colorName"
                android:layout_alignBaseline="@+id/register_favorite_movie_height"
                android:layout_alignBottom="@+id/register_favorite_movie_height"
                android:layout_toRightOf="@+id/register_favorite_movie_height"
                android:layout_toEndOf="@+id/register_favorite_movie_height"
                android:layout_marginLeft="29dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorBackGround" />

    </LinearLayout>

    <Button
        android:id="@+id/update_personal_information_finish"
        android:layout_width="@dimen/common_button_width"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/common_margin_30"
        android:layout_marginStart="@dimen/common_margin_30"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_selector_with_corner_24"
        android:text="Update"
        android:textColor="@color/colorPureWhite"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/visit_bar_chart"
        android:layout_width="@dimen/common_button_width"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/common_margin_30"
        android:layout_marginStart="@dimen/common_margin_30"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_selector_with_corner_24"
        android:text="bar chart"
        android:textColor="@color/colorPureWhite"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/favorite_units_pie_graph"
        android:layout_width="@dimen/common_button_width"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/common_margin_30"
        android:layout_marginStart="@dimen/common_margin_30"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_selector_with_corner_24"
        android:text="pie graph"
        android:textColor="@color/colorPureWhite"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/exit_account_finish"
        android:layout_width="@dimen/common_button_width"
        android:layout_height="@dimen/common_button_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/common_margin_30"
        android:layout_marginStart="@dimen/common_margin_30"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_selector_with_corner_24_red"
        android:text="exit account"
        android:textColor="@color/colorPureWhite"
        android:textSize="20dp"/>

</LinearLayout>